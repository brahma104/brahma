<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.tpcc.entities">
	<union-subclass name="SavingsAccount" extends="Account"
		table="savings_account">
		<property name="minBalance" column="min_balance" />
		<property name="hasCheckBookFacility" column="has_checkbook_facility" />
		<property name="maxWithdrawlLimit" column="max_withdrawl_limit" />
	</union-subclass>
</hibernate-mapping>