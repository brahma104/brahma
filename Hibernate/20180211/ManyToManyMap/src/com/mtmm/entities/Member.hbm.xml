<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mtmm.entities">
	<class name="Member" table="member">
		<id name="memberNo" column="member_no">
			<generator class="increment" />
		</id>
		<property name="memberName" column="member_nm" />
		<property name="mobile" column="mobile_nbr" />
		<property name="emailAddress" column="email_address" />

		<map name="responsibilities" table="member_responsibilities">
			<key column="member_no" not-null="true" />
			<map-key column="role_nm" type="string" />
			<many-to-many column="responsibility_no" class="Responsibility" />
		</map>

	</class>
</hibernate-mapping>