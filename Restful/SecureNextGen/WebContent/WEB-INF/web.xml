<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>SecureNextGen</display-name>
	<servlet>
		<servlet-name>jersey</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.nextgen.common.NextGenApplication</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>jersey</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<!-- <security-constraint>
		<web-resource-collection>
			<web-resource-name>TrainAvailability</web-resource-name>
			<url-pattern>/services/train/availability/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>moderator</role-name>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint> -->
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>moderator</role-name>
	</security-role>

	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
</web-app>















